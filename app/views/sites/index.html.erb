<section id="register_site">
  <div class="container">
    <h2 class="page-header" align="center">Sitios</h2>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>About</th>
          <th>Adress</th>
          <th>Phone</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @sites.each do |site| %>
          <tr>
            <td><%= site.name %></td>
            <td><%= site.about %></td>
            <td><%= site.adress %></td>
            <td><%= site.phone %></td>
            <td><%= link_to 'Show', site %></td>
            <td><%= link_to 'Edit', edit_site_path(site) %></td>
            <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Site', new_site_path %>
  </div>
</section>
<p id="notice"><%= notice %></p>