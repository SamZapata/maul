<div class="container" align="center">

  <nav class="navbar navbar-inverse-sub navbar-stactic-sub">  
    <h2 class="page-header" align="center">Eventos</h2>  
  </nav>
  
  <% if user_signed_in? %>
  <%= link_to 'Crear Un Evento', new_event_path %>
  <table>    
    <thead>
      <tr>
        <th> </th>        
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>            
      <% @events.each do |event| %>
        <tr>
          <td>
            <div class="row" align="center">
              <div class="col-md-7">
                <img class="img-responsive">
                <%= link_to image_tag(event.image.url, :width=>300, :heigth=>200), event %>
              </div>
              <div class="col-md-5" align="left">
                <h4><%= link_to event.name, event %></h4>
                <p><strong>Resumen: </strong><%= event.about %></p>
                <p><strong>Fecha: </strong><%= event.fecha %></p>
              </div>
            </div>
            <hr>
          </td>

          <!--<td><%= event.name %></td>
          <td><%= event.about %></td>
          <td><%= event.fecha %></td>
          <td><%= event.hora %></td>
          <td><%= event.sitio %></td>
          <td><%= event.estado %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        </tr>
        <% end %>
        
    </tbody>
  </table>
  <% else %>
    <div class="row" align="center">
      <h4 class="page-header">Primero Debes Iniciar Sesión</h4>
      <div class="col-md-6">
        <div class="thumbnail thumbnail-btn">
            <%= link_to "REGISTRARSE", new_user_registration_path, :class => 'navbar-link' %>
        </div>
      </div>

      <div class="col-md-6" >
        <div class="thumbnail thumbnail-btn">
          <a href="/users/sign_in">INICIAR SESIÓN</a>
        </div>
      </div>
    </div>
  <% end %>

  <br>
</div>
