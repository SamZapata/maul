<section id="register_event">
	<div class="container">
		<% if user_signed_in? %>
			<nav class="navbar navbar-inverse-sub navbar-stactic-sub">  
				<h2 class="page-header" align="center">Crear un Evento</h2>
			</nav>
			
			<%= render 'form', event: @event %>
		<% else %>
	      <div class="row" align="center">
	        <h4 class="page-header">Primero Debes Iniciar Sesión</h4>
	        <div class="col-md-6">
	          <div class="thumbnail thumbnail-btn">
	              <%= link_to "REGISTRARSE", new_user_registration_path, :class => 'navbar-link' %>
	          </div>
	        </div>

	        <div class="col-md-6" >
	          <div class="thumbnail thumbnail-btn">
	            <a href="/users/sign_in">INICIAR SESIÓN</a>
	          </div>
	        </div>
	      </div>
	    <% end %>
	</div>
</section>

<%= link_to 'Back', events_path %>
<p id="notice"><%= notice %></p>
