
<section id="show_community">
<div class="container">
	<% if user_signed_in? %>
		<h2 class="page-header"><%= @community.name %></h2>
		<div class="well">
			<div class="row">
				<div class="col-lg-12">
					<div class="col-lg-8">
						<p><strong>Sobre la Comunidad</strong></p>
						<p> <%= @community.about %> </p>
						<p> <strong>Contacto: </strong><%= @community.contacto %> </p>
						<p><strong>Email:</strong> <%= @community.email %> </p>
						<p><strong>Siguenos: </strong>															
								<a href=<%= @community.facebook %>><i class="fa fa-2x fa-facebook-square"></i></a>
								<a href=<%= @community.twitter %>><i class="fa fa-2x fa-twitter-square"></i></a>
						</p>
						<p><strong>¿Donde estamos?</strong> <a href=<%= site_path %>> <%= @community.site.name %>  (<%= @community.site.adress %>) </p></a>
					</div>
					<div class="col-lg-4">
						<div class="thumbnail">
							<img class="img-responsive">
							<%= image_tag @community.avatar.url %>
						</div>
					</div>
			  	</div>
			</div>
	  	</div>
	  	<%= link_to 'Modificar', edit_community_path(@community) %> |
		<%= link_to 'Volver', communities_path %>
	<% else %>
      <div class="row" align="center">
        <h4 class="page-header">Primero Debes Iniciar Sesión</h4>
        <div class="col-md-6">
          <div class="thumbnail thumbnail-btn">
              <%= link_to "REGISTRARSE", new_user_registration_path, :class => 'navbar-link' %>
          </div>
        </div>

        <div class="col-md-6" >
          <div class="thumbnail thumbnail-btn">
            <a href="/users/sign_in">INICIAR SESIÓN</a>
          </div>
        </div>
      </div>
    <% end %>
</div>
</section>

<p id="notice"><%= notice %></p>

