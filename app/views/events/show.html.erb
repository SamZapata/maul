<section id="show_community">
  <div class="container">
    <% if user_signed_in? %>
      <h2 class="page-header"><%= @event.name %></h2>
      <div class="well">
        <div class="row">
          <div class="col-lg-12">
            <div class="col-lg-8">
              <p> <%= @event.about %> </p>
              <p> <strong>Fecha: </strong><%= @event.fecha %> </p>
              <p><strong>Hora:</strong> <%= @event.hora.strftime("%I:%M:%p") %> </p>              
              <p><strong>Sitio: </strong> <a href=<%= site_path %>> <%= @event.site.name %>  (<%= @event.site.adress %>) </p></a>
              
              
                
                  <iframe src= <%= @event.site.mapgoogle.gsub(/<iframe src="|" width="400" height="300" frameborder="0" style="border:0" allowfullscreen><|iframe>/,"") %> width="430" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
                
              
            </div>
            <div class="col-lg-4">
              <div class="thumbnail">
                <img class="img-responsive">
                <%= image_tag @event.image.url %>
              </div>
            </div>            
        </div>
      </div>      
    <% else %>
      <div class="row" align="center">
        <h4 class="page-header">Primero Debes Iniciar Sesión</h4>
        <div class="col-md-6">
          <div class="thumbnail thumbnail-btn">
              <%= link_to "REGISTRARSE", new_user_registration_path, :class => 'navbar-link' %>
          </div>
        </div>

        <div class="col-md-6" >
          <div class="thumbnail thumbnail-btn">
            <a href="/users/sign_in">INICIAR SESIÓN</a>
          </div>
        </div>
      </div>
    <% end %> 
  </div>
  <%= link_to 'Modificar', edit_event_path(@event) %>
</section>
