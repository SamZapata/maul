
<section id="show_user">
<div class="container">
	<% if user_signed_in? %>
		<h2 class="page-header"><%= current_user.first_name %> <%= current_user.last_name %></h2>
		<div class="well">
			<div class="row">
				<div class="col-lg-12">
					<div class="col-lg-8">												
						<p> <strong>Usuario: </strong><%=current_user.username%></p>
						<p> <strong>Email: </strong><%= current_user.email %> </p>				
						<p><strong>Redes Sociales: </strong>						
								<a href=<%= current_user.facebook %>><i class="fa fa-2x fa-facebook-square"></i></a>
								<a href=<%= current_user.twitter%>><i class="fa fa-2x fa-twitter-square"></i></a>
						</p>						
					</div>
					<div class="col-lg-4">
						<div class="thumbnail">
							<img class="img-responsive">
							<%= image_tag current_user.avatar.url %>
						</div>
					</div>
			  	</div>
			</div>
	  	</div>	  	
	  	<%= link_to 'Editar Perfil', edit_user_registration_path %>	
	<% else %>
      <div class="row" align="center">
        <h4 class="page-header">Primero Debes Iniciar Sesión</h4>
        <div class="col-md-6">
          <div class="thumbnail thumbnail-btn">
              <%= link_to "REGISTRARSE", new_user_registration_path, :class => 'navbar-link' %>
          </div>
        </div>

        <div class="col-md-6" >
          <div class="thumbnail thumbnail-btn">
            <a href="/users/sign_in">INICIAR SESIÓN</a>
          </div>
        </div>
      </div>
    <% end %>
</div>
</section>

