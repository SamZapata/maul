<section id="register_site">
  <div class="container">
    <h2 class="page-header" align="center">Sitios</h2>
    <% if user_signed_in? %>
      <table>
        <thead>
          <tr>
            <th> </th>            
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>          
            <tr>
            <% @sites.each do |site| %>
            <td>
              <div class="col-md-12 text-center">
                <div class="thumbnail">
                  <img class="img-responsive">
                  <%= link_to image_tag(site.avatar.url, :width=>100, :heigth=>100), site %>
                  <div class="caption">
                    <%= link_to site.name, site %>
                  </div>
                </div>
              </div>
              <!--<td><%= site.name %></td>
              <td><%= site.about %></td>
              <td><%= site.adress %></td>
              <td><%= site.phone %></td>
              <td><%= link_to 'Show', site %></td>
              <td><%= link_to 'Edit', edit_site_path(site) %></td>
              <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
            </td>
            <% end %>
            </tr>          
        </tbody>
      </table>
    <% else %>
      <div align="center">
            <h2 class="page-header">Valida tus datos para iniciar sesión</h2>
            <p>¿Eres un Usuario Registrado?</p>
            <%= link_to "REGISTRARSE", new_user_registration_path, :class => 'navbar-link' %>
            <p>Ó</p>
            <p>Iniciar Sesión</p>
            <a href="/users/sign_in">LOGIN</a>
      </div>
    <% end %>

    <br>

    <%= link_to 'New Site', new_site_path %>
  </div>
</section>
<p id="notice"><%= notice %></p>