<section id="show_sites">
	<div class="container">
		<% if user_signed_in? %>			
			<nav class="navbar navbar-inverse-sub navbar-stactic-sub">  				
				<h2 class="page-header"><%= @site.name %></h2>
			</nav>			
			<div class="well">
				<div class="row">
					<div class="col-lg-12">
						<div class="col-lg-7">
							<p><strong>Sobre el Sitio</strong></p>
							<p><%= @site.about %></p>
							<p><strong>Dirección: </strong><%= @site.adress %></p>
							<p><strong>Teléfono: </strong><%= @site.phone %></p>
						</div>
						<div class="col-lg-5">
							
							<div class="thumbnail">
							<iframe src= <%= @site.mapgoogle.gsub(/<iframe src="|" width="400" height="300" frameborder="0" style="border:0" allowfullscreen><|iframe>/,"") %> width="430" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>

								<!--<img class="img-responsive">
								<%= image_tag @site.avatar.url %>-->
							</div>
						</div>
					</div>
				</div>
				<div class="container">
					<h2 class="page-header">Comunidades que aquí se reunen</h2>
					<% @site.community.each do |com| %>
						<h4><%= link_to com.name, com %></h4>
					<% end %>										
				</div>
			</div>
			<%= link_to 'Modiicar', edit_site_path(@site) %> |
			<%= link_to 'Atrás', sites_path %>
		<% else %>
	      <div class="row" align="center">
	        <h4 class="page-header">Primero Debes Iniciar Sesión</h4>
	        <div class="col-md-6">
	          <div class="thumbnail thumbnail-btn">
	              <%= link_to "REGISTRARSE", new_user_registration_path, :class => 'navbar-link' %>
	          </div>
	        </div>

	        <div class="col-md-6" >
	          <div class="thumbnail thumbnail-btn">
	            <a href="/users/sign_in">INICIAR SESIÓN</a>
	          </div>
	        </div>
	      </div>
	    <% end %>
	</div>
</section>

<p id="notice"><%= notice %></p>

