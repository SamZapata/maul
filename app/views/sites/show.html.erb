<section id="show_sites">
	<div class="container">
		<% if user_signed_in? %>
			<h2 class="page-header"><%= @site.name %></h2>
			<div class="well">
				<div class="row">
					<div class="col-lg-12">
						<div class="col-lg-8">
							<p><%= @site.about %></p>
							<p><strong>Dirección: </strong><%= @site.adress %></p>
							<p><strong>Teléfono: </strong><%= @site.phone %></p>
						</div>
						<div class="col-lg-4">
							<div class="thumbnail">
								<img class="img-responsive">
								<%= image_tag @site.avatar.url %>						
							</div>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-8">
					<p><strong>Mapa de Ubicación: </strong></p>
						<div class="thumbnail">
							
						</div>
					</div>
				</div>
			</div>
			<%= link_to 'Modiicar', edit_site_path(@site) %> |
			<%= link_to 'Atrás', sites_path %>
		<% else %>
			<div align="center">
        		<h2 class="page-header">Valida tus datos para iniciar sesión</h2>
        		<p>¿Eres un Usuario Registrado?</p>
		        <%= link_to "REGISTRARSE", new_user_registration_path, :class => 'navbar-link' %>
		        <p>Ó</p>
		        <p>Iniciar Sesión</p>
		        <a href="/users/sign_in">LOGIN</a>
      		</div>
		<% end %>
	</div>
</section>

<p id="notice"><%= notice %></p>

