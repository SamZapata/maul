<section id="register_site">
  <div class="container" align="center">
    <h2 class="page-header" align="center">Sitios</h2>
    <% if user_signed_in? %>
      <%= link_to 'Registrar Un Sitio', new_site_path %>
      
      <table class="table table-responsive">
        <thead>
          <tr>            

          </tr>
        </thead>

        <tbody>                
            <div class="col-lg-12">
            <% @sites.each do |site| %>            
              <tr>
                <div class="col-md-3">
                <div class="thumbnail">
                  <img class="img-responsive">
                  <%= link_to image_tag(site.avatar.url, :width=>100, :heigth=>100), site %>
                  <div class="caption">
                    <%= link_to site.name, site %>
                  </div>
                </div> 
                </div>              
            </div>
              <!--<td><%= site.name %></td>
              <td><%= site.about %></td>
              <td><%= site.adress %></td>
              <td><%= site.phone %></td>
              <td><%= link_to 'Show', site %></td>
              <td><%= link_to 'Edit', edit_site_path(site) %></td>
              <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->            
            </tr>
            <% end %>
            </div>        
        </tbody>
      </table>      

    <% else %>
      <div class="row" align="center">
        <h4 class="page-header">Primero Debes Iniciar Sesión</h4>
        <div class="col-md-6">
          <div class="thumbnail thumbnail-btn">
              <%= link_to "REGISTRARSE", new_user_registration_path, :class => 'navbar-link' %>
          </div>
        </div>

        <div class="col-md-6" >
          <div class="thumbnail thumbnail-btn">
            <a href="/users/sign_in">INICIAR SESIÓN</a>
          </div>
        </div>
      </div>
    <% end %>

    <br>  
  </div>
</section>
<p id="notice"><%= notice %></p>