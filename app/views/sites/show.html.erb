<section id="show_sites">
	<div class="container">
		<% if user_signed_in? %>
			<h2 class="page-header"><%= @site.name %></h2>
			<div class="well">
				<div class="row">
					<div class="col-lg-12">
						<div class="col-lg-7">
							<p><%= @site.about %></p>
							<p><strong>Dirección: </strong><%= @site.adress %></p>
							<p><strong>Teléfono: </strong><%= @site.phone %></p>
						</div>
						<div class="col-lg-5">
							
							<div class="thumbnail">
							<iframe src= <%= @site.mapgoogle.gsub(/<iframe src="|" width="400" height="300" frameborder="0" style="border:0" allowfullscreen><|iframe>/,"") %> width="430" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>

								<!--<img class="img-responsive">
								<%= image_tag @site.avatar.url %>-->
							</div>
						</div>
					</div>
				</div>
				<div class="container">
					<h4 class="page-header">Comunidades que aquí se reunen</h4>
					<%= @site.community.select(:name).map(&:name) %>					
					
				</div>
			</div>
			<%= link_to 'Modiicar', edit_site_path(@site) %> |
			<%= link_to 'Atrás', sites_path %>
		<% else %>
			<div align="center">
        		<h2 class="page-header">Valida tus datos para iniciar sesión</h2>
        		<p>¿Eres un Usuario Registrado?</p>
		        <%= link_to "REGISTRARSE", new_user_registration_path, :class => 'navbar-link' %>
		        <p>Ó</p>
		        <p>Iniciar Sesión</p>
		        <a href="/users/sign_in">LOGIN</a>
      		</div>
		<% end %>
	</div>
</section>

<p id="notice"><%= notice %></p>

