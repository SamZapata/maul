<!-- Index events -->
<div class="container" align="center">
  <h2 align="center">Eventos</h2>
  <%= link_to 'Crear Un Evento', new_event_path %>
  
  <table>
    <thead>
      <tr>
        <th> </th>        
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>            
      <% @events.each do |event| %>
        <tr>
          <td>
            <div class="row" align="center">
              <div class="col-md-5 ">
                <img class="img-responsive">
                <%= link_to image_tag(event.image.url, :width=>300, :heigth=>200), event %>
              </div>
              <div class="col-md-7 " align="left">
                <h4><%= link_to event.name, event %></h4>
                <p><strong>Resumen: </strong><%= event.about %></p>
                <p><strong>Fecha: </strong><%= event.fecha %></p>
              </div>
            </div>
            <hr>
          </td>

        </tr>
      <% end %>
        
    </tbody>
  </table>

