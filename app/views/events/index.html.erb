<div class="container">

  <h2 class="page-header" align="center">Eventos</h2>

  <% if user_signed_in? %>
  <table>    
    <thead>
      <tr>
        <th> </th>        
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      
        <tr>
        <% @events.each do |event| %>
          <td>
            <div class="row">
              <div class="col-md-7">
                <img class="img-responsive">
                <%= link_to image_tag(event.image.url, :width=>300, :heigth=>200), event %>
              </div>
              <div class="col-md-5">
                <h4><%= link_to event.name, event %></h4>
                <p><strong>Resumen: </strong><%= event.about %></p>
                <p><strong>Fecha: </strong><%= event.fecha %></p>
              </div>
            </div>
            <hr>
          </td>

          <!--<td><%= event.name %></td>
          <td><%= event.about %></td>
          <td><%= event.fecha %></td>
          <td><%= event.hora %></td>
          <td><%= event.sitio %></td>
          <td><%= event.estado %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        <% end %>
        </tr>      
    </tbody>
  </table>
  <% else %>
    <div align="center">
      <h2 class="page-header">Valida tus datos para iniciar sesión</h2>
      <p>¿Eres un Usuario Registrado?</p>
      <%= link_to "REGISTRARSE", new_user_registration_path, :class => 'navbar-link' %>
      <p>Ó</p>
      <p>Iniciar Sesión</p>
      <a href="/users/sign_in">LOGIN</a>
    </div>
  <% end %>

  <br>
</div>

<%= link_to 'New Event', new_event_path %>
<p id="notice"><%= notice %></p>
