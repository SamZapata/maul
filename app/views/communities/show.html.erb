<!-- See community -->
<section id="show_community">

<!-- Breadcrumb navigation -->
<div class="container">
	<ul class="breadcrumb page-header">
		<li><a href="/"><i class="fa fa-home"></i></a></li>
		<li><a href="/communities">Comunidades</a></li>
		<li><a href="/comunas/<%= @community.comuna.id %>"><%= @community.comuna.name %></a></li>
		<li><a href="#"><%= @community.name %></a></li>
	</ul>
</div>

<div class="container">
		<h2 ><%= @community.name %></h2>
		<div class="well">
			<div class="row">
				<div class="col-lg-12">
					<div class="col-lg-8">
						<p><strong>Sobre la Comunidad</strong></p>
						<p> <%= @community.about %> </p>
						<p> <strong>Teléfono: </strong><%= @community.contacto %> </p>
						<p><strong>Email:</strong> <%= @community.email %> </p>
						<p><strong>Siguenos: </strong>															
								<a href= <%= @community.facebook %> ><i class="fa fa-2x fa-facebook-square"></i></a>
								<a href=<%= @community.twitter %>><i class="fa fa-2x fa-twitter-square"></i></a>
						</p>
						<p><strong>¿Donde estamos?</strong> <a href="/sites/<%=@community.site.id %>"> <%= @community.site.name %>  (<%= @community.site.adress %>) </p></a>
					</div>
					<div class="col-lg-4">
						<div class="thumbnail">
							<img class="img-responsive">
							<%= image_tag @community.avatar.url %>
						</div>
					</div>
			  	</div>
			</div>
	  	</div>
	  	<%= link_to 'Modificar', edit_community_path(@community) %> |
		<%= link_to 'Volver', communities_path %>
</div>
</section>

<p id="notice"><%= notice %></p>

